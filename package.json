{
  "name": "tomoshi",
  "version": "1.0.0",
  "description": "きょうの3つ - シンプルなタスク・習慣管理PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply tomoshi-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply tomoshi-db --remote",
    "db:migrate:list": "wrangler d1 migrations list tomoshi-db --local",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@block65/webcrypto-web-push": "^1.0.2",
    "@passwordless-id/webauthn": "^2.1.2",
    "@tailwindcss/postcss": "^4.1.18",
    "hono": "^4.7.0",
    "lucide-react": "^0.563.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/workers-types": "^4.20250124.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.5.0",
    "prettier": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "wrangler": "^3.105.0"
  },
  "keywords": [
    "pwa",
    "cloudflare-workers",
    "hono",
    "react",
    "task-management"
  ],
  "author": "",
  "license": "ISC"
}
